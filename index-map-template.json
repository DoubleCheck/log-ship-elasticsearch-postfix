{
    "template" : "postfix-orphan*",
    "mappings" : {
        "postfix-orphan" : {
            "properties": {
                "id":     { "type" : "string", "index": "not_analyzed", "store" : true },
                "date" :   { "type" : "date" },
                "delay" :  { "type" : "float" },
                "events" : {
                    "properties": {
                        "date" : { "type" : "date" },
                        "relay": { "type" : "string", "index": "not_analyzed" },
                        "status": { "type" : "string", "index": "not_analyzed" }
                    }
                },
                "nrcpt" : { "type" : "float" },
                "size"  : { "type" : "double" }
            }
        }
    }
}
